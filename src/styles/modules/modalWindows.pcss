.modal-window {
  z-index: 15;
  /* pseudoInset fixed 0 0; */
  display: grid;
  place-items: center center;

  height: 100vh;
  height: 100svh;
  width: 100vw;

  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(1px);
  transition: opacity 0.3s ease;

  overflow-y: auto;
  opacity: 0;
  pointer-events: none;

  &.active {
    opacity: 1;
    pointer-events: all;
  }
  &__closer {
    color: #7d7d7d;
  }
}
