.modal-window {
  @mixin inset fixed 0 0;
  display: grid;
  z-index: 15;
  place-items: center center;

  width: 100vw;
  height: 100vh;
  height: 100svh;

  overflow-y: auto;
  backdrop-filter: blur(1px);

  background: rgba(0, 0, 0, 0.3);
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;

  &.active {
    opacity: 1;
    pointer-events: all;
  }
  &__closer {
    color: #7d7d7d;
  }
}
