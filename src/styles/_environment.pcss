$layoutWidth: 1440px;
$minLayoutWidth: 320px;
$mainFontSize: 16px;
$minFontSize: 12px;

@define-mixin size $width, $height: $width {
  width: $width;
  height: $height;
}
@define-mixin hide {
  overflow: hidden;
  opacity: 0;
  pointer-events: none;
}
@define-mixin show {
  overflow: auto;
  opacity: 1;
  pointer-events: all;
}
@define-mixin inset $position, $top: "", $right: "", $bottom: "", $left: "" {
  position: $position;
  top: $top;
  right: $right;
  bottom: $bottom;
  left: $left;
}
