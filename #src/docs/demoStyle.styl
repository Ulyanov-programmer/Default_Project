@import '../styles/modules/_nullStyle';
@import '../styles/other/_mixins';

html {
	@media (min-width 768px) {
		-ms-overflow-style none;
		scrollbar-width none;

		&::-webkit-scrollbar {
			width 0;
		}
	}

	::selection {
		background #bebebe;
	}
}

body {
	padding 15px;
	font-family Glory, sans-serif;
	font-size 15px;
	color #000;
	background #dedddd;
	flex-set column nowrap;
	line-height 1.3;

	>* {
		margin-bottom 20px;
	}
}

.main {
	height 100%;

	&__body {
		>* {
			margin-bottom 50px;
		}
	}
}

.block {
	background #efeeee;
	box-shadow 0 0 10px rgba(0, 0, 0, .05);
}

.header {
	margin-bottom 40px;

	&__body {
		display flex;
		align-items center;
		justify-content space-between;
		notLastChildMargin 0 10px 0 0;
	}

	&__logo {
	}

	&__title {
		font-size 36px;
	}

	&__socials {
		flex-set row nowrap;
		align-items center;

		>* {
			padding 5px;
		}
	}

	&__github {
	}
}

h2 {
	font-size 28px;
}

figure {
	text-align center;
	color rgba(0, 0, 0, .5);
}

.text-center {
	text-align center;
}

.ref {
	color #000;

	&:hover, &:focus {
		text-decoration underline;
	}
}

.fat-text {
	font-weight 600;
}

.green-text {
	color rgb(0, 136, 71);
}

.code {
	padding 2px 5px;
	border-radius 10%;
	color #000;
	background #e4e4e4;
}

.orange-text {
	color rgb(229, 107, 52);
}

.blue-text {
	color rgb(115, 92, 255);
}

.title {
	font-weight 600;
}

.section {
	&__body {
		flex-set column nowrap;
		justify-content center;
		align-items center;
		padding 30px 20px;
		notLastChildMargin 0 0 20px 0;
	}

	&__content {
		flex-set row wrap;
		justify-content space-around;
		align-items center;
		notLastChildMargin 0 10px 0 0;
	}

	&__buttons {
		flex-set row wrap;
		justify-content center;

		>* {
			margin 5px;
		}
	}

	&__title {
		padding-bottom 20px;
	}

	&__ref-block {
		position relative;
		overflow hidden;
		background #939393;
		border-radius 3px;
		padding 15px 30px;
		color #fff;
		font-weight 600;
		letter-spacing .5px;
		font-size 18px;
		transition all .2s ease;

		&:after {
			position absolute;
			left 0;
			bottom 20%;
			transform translate3d(-100%, 0, 0);
			width 90%;
			height 3px;
			background #e0e0e0;
			border-radius 3px;
			transition all .2s ease;
			content '';
		}

		&:hover, &:focus {
			&:after {
				transform translate3d(5%, 0, 0);
			}
		}
	}

	&__list {
		font-family Arial;
		notLastChildMargin 0 0 10px 0;

		&_big-margins {
			notLastChildMargin 0 0 25px 0;
		}

		&_not-style {
			li {
				list-style none;
			}
		}
	}

	&__li {
		text-align center;
		list-style inside;
		notLastChildMargin 0 0 25px 0;

		&_end {
			flex-set column nowrap;
			justify-content center;
			align-items center;
		}
	}

	&__text {
		display inline-block;
	}

	&__image {
		text-align center;

		img {
			object-fit contain;
			width 70%;
		}
	}

	figure {
		margin-top 25px;
	}
}

.advantage {
	padding-top 20px;

	&__body {
		flex-set column nowrap;
		justify-content center;

		>* {
			margin-bottom 20px;
		}
	}

	&__title {
		text-align center;
	}

	&__text {
	}

	&__preview-block {
		display flex;
		justify-content center;
		align-items center;
		padding 10px;
		border-radius 4px;
		background #939393;
		color #fff;
	}
}

.codepen {
}

.refbar {
	position sticky;
	top 0;
	display flex;
	flex-flow row wrap;
	overflow-x auto;
	overflow-y hidden;
	box-shadow 0 1px 10px rgba(0, 0, 0, .1);

	&__item {
		flex 1 1 150px;
		text-align center;
		color inherit;
		padding 7px 12px;
		font-size 16px;
		font-weight 600;
		transition all .2s ease;

		&:hover, &:focus {
			background #939393;
			filter invert();
		}
	}
}
