* {
	font-size 20px;
}

.submenu-button {
	position relative;
	display flex;
	justify-content center;
	align-items center;
	padding 5px;
	border 1px solid #000;
}

.submenu {
	position absolute;
	z-index 1;
	display none;
	background #818181;
	top 100%;
	width 100%;
	color #fff;

	&.show {
		display block;
	}

	&_to-left {
		right 0;
	}

	&_to-right {
		left 0;
	}

	&_center {
		left 50%;
		transform translate(-50%, 0);
	}
}

.anim-wrapper {
	margin-top 300px;
}

.animation_by_scroll__item {
	padding-bottom 20px;
	opacity 0;
	transform translate(10%, 10%);
	transition all 1s ease;

	&.active {
		opacity 1;
		transform translate(0, 0);
	}
}

.accordion {
	&__container {
		text-align center;
		firstLevelElementsMargin 'bottom' 20;
	}

	&__btn {
		padding 10px 10px 10px 10px;
		border 1px solid #000;
		cursor pointer;

		&.active {
			transform scale(1.1, 1.1);
		}
	}

	&__items {
		position relative;
		margin auto;
	}

	&__item {
		text-align center;
		overflow hidden;
		opacity 0;
		pointer-events none;
		transition all .3s ease;

		&.active {
			overflow auto;
			opacity 1;
			pointer-events all;
		}
	}
}

.el-menu {
	&__content {
		display grid;
		gap 15px;
	}

	&__item {
		position relative;
		border 1px solid #000;
		padding 15px 15px 15px 15px;
	}

	&__menu {
		position absolute;
		top 0;
		left 0;
		width 100%;
		height 100%;
		background #000000ab;
		color #fff;
		display flex;
		align-items center;
		text-align center;
		padding 10px;
		transition all .3s ease;

		&._non-active {
			overflow hidden;
			opacity 0;
			pointer-events none;
		}
	}
}

.filter {
	&__content {
		display flex;
		flex-flow column nowrap;
		gap 25px;
		font-family Arial;
	}

	&__header, &__main {
		display flex;
		gap 15px;
		justify-content center;
	}

	&__button {
		padding 10px 7px 10px 7px;
		border 1px solid #000;

		&.active, &:hover, &:focus {
			background #000;
			color #fff;
			cursor pointer;
		}
	}

	&__item {
		color #fff;
		padding 10px 5px 10px 5px;

		&_green {
			background green;
		}

		&_blue {
			background blue;
		}

		&_red {
			background red;
		}

		&_yellow {
			background yellow;
			color #000;
		}
	}
}

.par-wrapper {
	display flex;
	align-items center;
	justify-content center;
	width 100%;
	height: 500px;
	font-family Arial;
}

.parallax_el {
	padding: 5px;
	transition all .1s ease;
	font-size 35px;
}